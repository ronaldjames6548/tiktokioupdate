---
import { t } from "../i18n/index";

// Initialize with default language
const title = t("404.title");
const description = t("404.description");
const goHome = t("404.goHome");
---

<html>
<head>
    <title>{title}</title>
    <meta name="description" content={description} />
</head>
<body>
    <main>
        <h1>404</h1>
        <h2>{title}</h2>
        <p>{description}</p>
        <a href="/">{goHome}</a>
    </main>
</body>
</html>
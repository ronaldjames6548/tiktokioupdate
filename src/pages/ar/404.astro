---
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";
import Hero from "@components/hero.astro";

import { localizePath } from "astro-i18next";
import { changeLanguage } from "i18next";
import { t } from "i18next";

changeLanguage("ar");

const title = `Error 404`;
---

<Layout title={t("mics.404_title")}>
	<Container>
		<Hero />
	<section class="flex items-center h-full p-16">
		<div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
			<div class="max-w-md text-center">
				<h2 class="mb-8 font-bold text-4xl">
					<span class="sr-only">{t("mics.404_h2_text")}</span>
					<span class="text-primary">{t("mics.404_h2_text2")}</span>
				</h2>
				<p class="text-3xl font-semibold md:text-3xl">{t("mics.404_line1")}</p>
				<p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">{t("mics.404_line2")}</p>
				<a rel="noopener noreferrer" href={localizePath("/")} class="btn ml-4">{t("mics.404_back")}</a>
			</div>
		</div>
	</section>	
		
	</Container>
	
</Layout>
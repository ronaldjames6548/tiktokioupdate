---
import { getCollection } from "astro:content";
import Pagination from "@components/blog/pagination.astro";
import Posts from "@components/blog/posts.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import i18next, { changeLanguage } from "i18next";
import { t } from "i18next";

changeLanguage("ar");

export async function getStaticPaths() {
	changeLanguage("ar");
	const posts = await getCollection("blog", ({ data }) => {
		return !data.draft && data.publishDate < new Date();
	});
	const localizedPosts = posts.filter((page) => {
		const [lang, ...slug] = page.slug.split("/");
		return lang === i18next.language;
	});
	const tags = new Set();
	localizedPosts.map((post) => {
		Array.isArray(post.data.tags) &&
			post.data.tags.map((tag) => tags.add(tag.toLowerCase()));
	});
	return Array.from(tags).map((tag) => {
		return {
			params: { tag: tag },
			props: {
				posts: localizedPosts.filter(
					(post) =>
						Array.isArray(post.data.tags) &&
						post.data.tags.find((elem) => elem.toLowerCase() === tag),
				),
				tag: tag,
				lang: i18next.language,
			},
		};
	});
}
// Get the post directly from the prop on render
const { posts, tag, lang } = Astro.props;
---

<Layout title={`اكتشف جميع المقالات حول ${tag} | تيك توكيو — تنزيل فيديوهات تيك توك`}>  
<Container>
    <Sectionhead>
      <Fragment slot="title">{`اكتشف جميع المقالات حول ${tag} | تيك توكيو — تنزيل فيديوهات تيك توك`}</Fragment>
      <Fragment slot="desc">{` تعلم كيفية تنزيل مقاطع فيديو TikTok وإزالة العلامات المائية والمزيد ${tag} تصفح مجموعتنا الكاملة من المقالات والدروس`}</Fragment>
    </Sectionhead>
    <Posts posts={posts} />
  </Container>
</Layout>

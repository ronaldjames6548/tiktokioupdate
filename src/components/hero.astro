---
import { Image } from "astro:assets";
import Cobe from "@components/cobe.astro";
import Link from "@components/ui/link.astro";
import abstractDottedGlobeIllustration from "assets/abstract-dotted-globe-illustration.webp";
import InputScreen from "./InputScreen";
import { t, getCurrentLanguage } from "../utils/i18n";

const { dynamic = false } = Astro.props;

// Get current language from URL
const currentLang = getCurrentLanguage(Astro.url);

// Create translation function for current language
const translate = (key: string) => t(key, currentLang);
---

<div class="relative isolate pt-14 dark:bg-stone-950">
<div class="sm:pt-10">
  <div class="mx-auto max-w-7xl">
    <div class="mx-auto max-w-6xl text-center">
      <h1 class="text-2xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">{translate("hero.title")}</h1>
        <p class="mt-2 text-lg leading-8 text-gray-900 dark:text-gray-100">{translate("hero.subtitle")}</p>
    <InputScreen client:only="solid-js" />
      
</div>
    </div>
  </div>
</div>
---
import { getUrl, locales } from "../utils/localize";

const { Astro } = arguments; // ðŸ‘ˆ Get Astro from component context
const currentPath = Astro.url.pathname;
---

<!-- Canonical -->
<link rel="canonical" href={getUrl(Astro, locales[0], currentPath)} />

<!-- Alternate Hreflangs -->
{locales.map((locale) => (
  <link rel="alternate" href={getUrl(Astro, locale, currentPath)} hreflang={locale} />
))}

<!-- x-default -->
<link rel="alternate" hreflang="x-default" href={getUrl(Astro, 'en', currentPath)} />
---
import { getUrl, locales } from "../utils/localize";

const currentPath = Astro.url.pathname;
---

<!-- Canonical -->
<link rel="canonical" href={getUrl(locales[0], currentPath)} />

<!-- Alternate Hreflangs -->
{locales.map((locale) => (
  <link rel="alternate" href={getUrl(locale, currentPath)} hreflang={locale} />
))}

<!-- x-default -->
<link rel="alternate" hreflang="x-default" href={getUrl('en', currentPath)} />